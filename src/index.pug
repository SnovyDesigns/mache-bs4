          for card in [{price: "19", type: "STANDARD", first: "5", second: "200 MB"}, {price: "39", type: "BUSINESS", first: "15", second: "1 GB"}, {price: "59", type: "PREMIUM", first: "30", second: "2 GB"}, {price: "99", type: "UNLIMITED", first: "Unlimited", second: "Unlimited"}]
            .col-10.offset-1.col-md-6.offset-md-0.col-lg-3.text-center.mb-5.mb-lg-0
              +price-card(card)
  
    section.features
      .container
        .row
          for title, index in ["HIGH RESOLUTION","PHOTOGRAPHY","EASY TO CUSTOMIZE","24/7 SUPPORT","POWERFULL THEME","SEO OPTIMIZATION"]
